@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .header {
            background-color: #8B0000;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header h1 {
                font-size: 18px;
            }

        .nav-links {
            display: flex;
            gap: 20px;
        }

            .nav-links a {
                color: white;
                text-decoration: none;
                font-size: 16px;
            }

                .nav-links a:hover {
                    text-decoration: underline;
                }

        .forgot-password-container {
            max-width: 500px;
            margin: 60px auto;
            background-color: white;
            border: 3px solid #8B0000;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .forgot-password-title {
            text-align: center;
            color: #8B0000;
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .forgot-password-description {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
            font-size: 16px;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 30px;
        }

            .form-group label {
                display: block;
                color: #8B0000;
                font-weight: bold;
                margin-bottom: 8px;
                font-size: 16px;
            }

            .form-group input {
                width: 100%;
                padding: 15px;
                border: 2px solid #ddd;
                border-radius: 5px;
                font-size: 16px;
                transition: border-color 0.3s;
            }

                .form-group input:focus {
                    outline: none;
                    border-color: #8B0000;
                }

        .reset-button {
            width: 100%;
            background-color: #8B0000;
            color: white;
            border: none;
            padding: 15px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .reset-button:hover {
                background-color: #660000;
            }

            .reset-button:active {
                background-color: #440000;
            }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

            .back-link a {
                color: #8B0000;
                text-decoration: none;
                font-size: 14px;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 768px) {
            .forgot-password-container

        {
            margin: 20px;
            padding: 20px;
        }

        .forgot-password-title {
            font-size: 24px;
        }

        .forgot-password-description {
            font-size: 14px;
        }

        }
    </style>
}

<div class="forgot-password-container">
    <h2 class="forgot-password-title">Forgot Password</h2>
    <p class="forgot-password-description">
        Enter your email address or student number below and we'll send you a link to reset your password.
    </p>
    <form asp-action="ForgotPass" asp-controller="Account" method="post">
        <div class="form-group">
            <label for="emailOrStudentNumber">Email or Student Number:</label>
            <input type="text" id="emailOrStudentNumber" name="emailOrStudentNumber"
                   placeholder="Enter your email or student number" required>
        </div>
        <button type="submit" class="reset-button">Send Reset Link</button>
    </form>
    <div class="back-link">
        <a asp-controller="Home" asp-action="Index">Back to Login</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}