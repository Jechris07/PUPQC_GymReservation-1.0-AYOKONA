@model AYOKONA.Models.StudentLoginViewModel

@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background-color: #970c10;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .main-container {
        min-height: 80vh;
        display: flex;
        align-items: center; /* Vertically center both sections */
        justify-content: center;
    }

    .login-section {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #970c10;
    }

    .login-card {
        background: #fff;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        text-align: left;
    }

        .login-card h2 {
            font-weight: bold;
            color: #8B0000;
            text-align: center;
        }
    .control-label {
        text-align = left;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-login {
        background-color: #8B0000;
        color: white;
        width: 100%;
    }

        .btn-login:hover {
            background-color: #a40000;
        }

    .forgot-link,
    .create-link {
        font-size: 0.9rem;
    }

    .create-link {
        color: orange;
    }

    .pup-logo {
        max-width: 80px;
        margin: 0 auto 1rem;
        display: block;
    }

    .image-section {
        width: 710px;
        height: 370px;
        background-image: url('/Images/BottomAdmin.jpg');
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @@media (max-width: 768px) {
        .main-container

    {
        flex-direction: column;
    }

    .image-section {
        display: none;
    }

    }
</style>

<div class="main-container">
    <!-- Left: Login Form -->
    <div class="login-section">
        <div class="login-card text-center">
            <img src="~/Images/MainLogo.png" alt="PUP Logo" class="pup-logo" />
            <h6 class="text-danger font-weight-bold">STUDENTS</h6>
            <h2>Gym Reservation</h2>
            <p class="font-weight-bold">Welcome to PUPQC Gym Reservation Portal</p>
            <p>Enter your credentials below</p>

            <form asp-action="StudentLogin" asp-controller="Users" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="StudentNumber" class="control-label">Student Number</label>
                    <input asp-for="StudentNumber" class="form-control" placeholder="Enter your student number" />
                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mb-3">
                    <span></span>
                    <a asp-controller="Home" asp-action="ForgotPass" class="forgot-link text-success">Forgot password?</a>
                </div>

                <div class="form-group">
                    <input type="submit" value="Log In" class="btn btn-login" />
                </div>
            </form>

            <p class="mt-3">Don't have an account? <a asp-action="Register" asp-controller="Account" class="create-link">Create account</a></p>
        </div>
    </div>

    <!-- Right: Image Section -->
    <div class="image-section"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}